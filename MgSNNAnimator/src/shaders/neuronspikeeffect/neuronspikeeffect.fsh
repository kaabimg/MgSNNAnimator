uniform sampler2D qt_Texture0;
varying highp vec2 qt_TexCoord0;
uniform vec4 color;
void main()
{
	
	gl_FragColor = texture2D(qt_Texture0, qt_TexCoord0) * color;
	gl_FragColor.a = .4;	
}